{
    "name": "nfov",
    "productName": "nfov",
    "version": "0.0.0",
    "description": "Simple nfo viewer",
    "os": [
        "darwin",
        "win32"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nrlquaker/nfov.git"
    },
    "main": "src/index.ts",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "tslint --project tsconfig.json --type-check --force"
    },
    "keywords": [
        "nfo",
        "electron"
    ],
    "author": "nrlquaker",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nrlquaker/nfov/issues"
    },
    "homepage": "https://github.com/nrlquaker/nfov",
    "config": {
        "forge": {
            "make_targets": {
                "darwin": [
                    "zip"
                ],
                "win32": [
                    "squirrel"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "npm",
                "icon": "assets/icon.icns"
            },
            "electronWinstallerConfig": {
                "name": "nfov"
            },
            "windowsStoreConfig": {
                 "packageName": "",
                 "name": "nfov"
            },
            "github_repository": {
                "owner": "nrlquaker",
                "name": "nfov"
            }
        }
    },
    "dependencies": {
        "electron-compile": "^6.4.1",
        "fs": "0.0.1-security",
        "iconv-lite": "^0.4.19",
        "path": "^0.12.7",
        "tslib": "^1.7.1"
    },
    "devDependencies": {
        "electron-forge": "^4.0.2",
        "electron-prebuilt-compile": "1.7.5",
        "prettier": "^1.6.1",
        "tslint": "^5.7.0",
        "typescript": "^2.2.2"
    }
}
